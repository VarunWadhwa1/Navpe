<resources>
    <!-- Base application theme. -->
    <style name="Theme.navpe" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="customColorValue">@color/black</item>
        <item name="custom_yellow">#FFB300</item>
        <item name="custom_green_button">#AED581</item>

    </style>
    <style name="BrandedSwitch.control" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge" >
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#1C92F2</item>
        <item name="colorSwitchThumbNormal">#000000</item>
    </style>

    <style name="BrandedSwitch.text" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="android:textColor">#EA2522</item>
        <item name="android:textSize">9sp</item>
    </style>


<!-- Custom Themes-->
    <style name="SCREEN">
        <item name="android:backgroundTint">#FF1F9CDE</item>
    </style>

    <style name="FONT_COLOR">
        <item name="color">@color/black</item>
        <item name="android:textColorHint">#616161</item>
    </style>
    <style name="ccp">
        <item name="ccp_contentColor">@color/black</item>
    </style>

    <style name="CARD_STYLE">
        <item name="android:backgroundTint">@color/diffColor</item>
        <item name="android:background">@drawable/roundedcorners</item>
    </style>

</resources>